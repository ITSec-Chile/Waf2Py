<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-body">
                <h4 >Manage modsecurity rules and configuration</h4>
                <br>
                <table class="table table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th style="width:auto">CRS Configuration</th>
                                <th style="width:auto">Edit</th>
                            </tr>
                            <tr>
                                <td>crs-setup.conf</td>
                                <td >
                                   <h4><a target="_blank" href="/Waf2Py/default/CRSSetupEdit/{{=query[0]['id_rand']}}"><span class="label warning_light_bulma"><i class="fa fa-edit"></i>Edit configuration</span> </a></h4></td>
                            </tr>
                        </tbody>
                    </table>
                <hr>
                    <table class="table table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th style="width:auto">Rule name</th>
                                <th style="width:auto">On -Off</th>
                                <th style="width:auto">Edit Rule</th>
                            </tr>
                            {{counter = 0}}
                            {{for rule in rule_list:}}
                                {{counter += 1}}
                                <tr>
                                    <td style="vertical-align: middle; width">{{=rule.title().upper()}}</td>
                                    <td style="vertical-align: middle;" align="center">
                                        <!-- Rounded switch -->
                                        <label class="switch">
                          <input type="checkbox" {{try:}}{{if r_states[rule.title().lower()] == 'On':}}checked{{else:}}""{{pass}}{{except:}}{{pass}} id="setQuickVar{{=counter}}">
                          <div class="slider round"></div>
                        </label>
                                        <script>
                                            $('#setQuickVar{{=counter}}').on('click', function() {
                                              var status = this.checked ? 'On' : 'Off';
                                              //var id_rand = {{=str(query[0]['id_rand'])}};
                                              $.ajax({
                                                 type  : 'POST',
                                                  url  : '{{=URL('default','ManageRules')}}',
                                                  data : {rule:'{{=rule}}',action:status,id:'{{=query[0]['id_rand']}}'},
                                                  function (data) {
                                                  $('#resultQuickVar{{=counter}}').load(location.href + " #resultQuickVar{{=counter}}");
                                                  }
                                              });
                                              });
                                        </script>
                                    </td>
                                    <td style="vertical-align: middle;" align="center">
                                        <h4>
                                        <a target="_blank" href="/Waf2Py/default/RuleEdit/{{=query[0]['id_rand']}}/{{=rule.title()}}"><span class="label success_light_bulma"><i class="fa fa-edit"></i>Edit rule</span> </a></h4>
                                        {{#=A((SPAN(_class="fa fa-edit"),' Edit rule'), callback=URL('default', 'RuleEdit', args=[rule.title(), query[0]['id_rand']]), target="_blank")}}
                                    </td>
                                </tr>
                                
                           {{pass}} 
                        </tbody>
                    </table>
        </div>
    </div>
</div>
</div>
